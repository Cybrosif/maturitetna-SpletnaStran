@page
@model IndexModel
@{
    ViewData["Title"] = "Domača stran";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="text-center">
                <h1 class="display-4">Dobrodošli</h1>
                <p>Pozdrabljeni uporabnik storitve "ime storitve"</p>
            </div>
        </div>
        <div class="col-md-4 position-relative vh-100">
            <form class="position-absolute bottom-50 start-0 end-0">
                <div class="form-group">
                    <label for="username">Uporabniško ime:</label>
                    <input type="text" class="form-control" id="username" name="username" required>
                </div>
                <div class="form-group">
                    <label for="password">Geslo:</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <button type="submit" class="btn btn-primary">Prijava</button>
            </form>
        </div>
    </div>
</div>
