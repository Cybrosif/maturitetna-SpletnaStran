@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("Admin"))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Administracija</a>
            <div class="dropdown-menu" aria-labelledby="adminDropdown">
                <a class="dropdown-item" asp-area="" asp-controller="ApplicationRoles" asp-action="Index">Roles</a>
                <a class="dropdown-item" asp-area="" asp-controller="Server" asp-action="Index">Strežniki</a>
                <a class="dropdown-item" asp-area="" asp-controller="Domain" asp-action="Index">Domene</a>
                <a class="dropdown-item" asp-area="" asp-controller="UserManagement" asp-action="Index">Uporabniki</a>
            </div>
        </li>
    }

}