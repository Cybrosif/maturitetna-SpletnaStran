@model maturitetna_NovaTestnaStran.Models.DomainEntity

@{
    ViewData["Title"] = "Ustvari";
}

<style>
    body {
        background-color: #f8f9fa;
        background-image: url('@Url.Content("~/Imgs/Background.jpg")');
        background-repeat: no-repeat;
        background-size: cover;
    }

    .btn-margin {
        margin-top: 10px; 
    }
</style>

<h1>Ustvari</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Domain" class="control-label"></label>
                <input asp-for="Domain" class="form-control" />
                <span asp-validation-for="Domain" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ustvari" class="btn btn-primary btn-margin" />
            </div>
        </form>
    </div>
</div>

<div>
    <button onclick="location.href='@Url.Action("Index")'" class="btn btn-secondary btn-margin">Nazaj</button>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
