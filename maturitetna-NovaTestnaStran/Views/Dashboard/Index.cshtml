                {
                    <div class="col-md-4">
                        <div class="glass-server">
                            <h3>Server @j</h3>
                            <img src="@($"server")" alt="@($"Server Logo")" class="server-logo">
                            <p>ŠIPTAR @j...</p>
                            <div class="status-indicator"></div>

                        </div>
                    </div>
                }
            </div>
        }
    </div>
